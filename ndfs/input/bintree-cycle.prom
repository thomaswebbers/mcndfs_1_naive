/* A binary tree of depth max, with accepting states at depth accept, 
   and an accepting cycle at each leaf */

int accept = 1; /* smaller or equal to max */
int max = 2; /* smaller or equal to 30 */

init {
	int d = 0; /* depth */
	int p = 0; /* position */

	do
	:: d < accept ->
		if
		:: p = p + (1 << d); d++
		:: d++
		fi
	:: else -> break
	od

	accept: skip;

	do
	:: d < max ->
		if
		:: p = p + (1 << d); d++
		:: d++
		fi
	:: else -> break
	od

	accept_leaf: goto accept_leaf;
}
